---
const { ...film } = Astro.props;
---

<a href={`/films/${film.id}`} class="flex justify-center items-center flex-col">
    <img
        class="transform transition-all duration-300 hover:scale-105 hover:shadow-lg rounded-lg overflow-hidden"
        src={film.affiche}
        alt="affiche film"
    />
    <h3 class="font-monserrat text-2xl pt-2">{film.titre}</h3>
    <p class="text-sm">{film.realisateur}</p>
</a>
