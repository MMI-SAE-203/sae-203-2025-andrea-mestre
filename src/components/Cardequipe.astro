---
const { ...membre } = Astro.props;
import ImagePB from "./ImagePB.astro";
---

<div class="border px-6 py-4 rounded-lg flex flex-col items-center max-w-xs">
    <div>
        <ImagePB 
            src={membre.photo} 
            alt="equipe photo" 
            classImg="w-full h-full object-cover" 
        />
    </div>
    <h2 class="py-4 text-lg font-semibold">{membre.prenom} {membre.nom}</h2>
    <p class="text-base text-center ">{membre.titre}</p>
    <p class="text-sm text-center pt-2 ">{membre.description}</p>
</div>
