---
import { pb } from '../../backend/backend.mjs';
const { record, field = "imgUrl", src, alt, classPicture, classImg, thumb = "1024x1024" } = Astro.props;

const imageUrl = src || (record?.[field] ? pb.files.getURL(record, record[field], { thumb }) : null);
---

{imageUrl && (
    <picture class={classPicture}>
        <img class={classImg} src={imageUrl} alt={alt || "Image"} />
    </picture>
)}